<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:orientation="vertical">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="手机号码登录"
            android:layout_marginTop="30dp"
            android:textColor="@color/color333"/>
    <EditText
            android:id="@+id/phone_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="11"
            android:textSize="17sp"
            android:inputType="phone"
            android:background="@null"
            android:layout_marginTop="60dp"
            android:hint="请输入11位手机号码"
            android:textColor="@color/color333"
            android:textColorHint="@color/color999"
            />
    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="9dp"
            android:background="@color/colorf3"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center_vertical">
        <EditText
                android:id="@+id/code_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLength="6"
                android:textSize="17sp"
                android:inputType="phone"
                android:background="@null"
                android:hint="请输入验证码"
                android:textColor="@color/color333"
                android:textColorHint="@color/color999"
                />
        <TextView
                android:id="@+id/get_code_text"
                android:layout_width="75dp"
                android:layout_height="34dp"
                android:textSize="11dp"
                android:text="获取验证码"
                android:gravity="center"
                android:textColor="@drawable/bg_fff_e75_color_selector"
                android:background="@drawable/bg_ccc_fce_6dp_selector"
                />
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="80dp"
            android:background="@color/colorf3"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="center_vertical">
        <CheckBox
                android:id="@+id/agree_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:button="@drawable/login_agree_selector"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginLeft="8dp"
                android:text="我已阅读并同意"
                android:textColor="@color/coloraaa" />
        <TextView
                android:id="@+id/preview_agree_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/colore75"
                android:text="《使用条款和隐私政策》"/>
    </LinearLayout>

    <TextView
            android:id="@+id/login_text"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="登录"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="@color/colorfff"
            android:background="@drawable/bg_f06_5dp_solid"/>
</LinearLayout>
