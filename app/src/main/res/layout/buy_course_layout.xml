<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:gravity="center_vertical">
        <ImageView
                android:id="@+id/head_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
            <TextView
                    android:id="@+id/user_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="乌龟意外速游"
                    android:textColor="@color/color333"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="账户享币余额："
                        android:textColor="@color/color666"/>
                <TextView
                        android:id="@+id/money_num_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/color40"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="@color/colorf1"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="课程信息"
            android:layout_margin="15dp"
            android:textColor="@color/color666"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_f5_2dp_solid">
        <ImageView
                android:id="@+id/cover_img"
                android:layout_width="110dp"
                android:layout_height="match_parent" />
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical">
            <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="小米赛车倒计时"
                    android:textColor="@color/color000"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课程价格"
                        android:textSize="12dp"
                        android:textColor="@color/color666"/>
                <TextView
                        android:id="@+id/new_price_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0币"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/colore75"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="支付方式"
            android:layout_margin="15dp"
            android:textColor="@color/color666"/>
    <LinearLayout
            android:id="@+id/money_pay_layout"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_fff_6dp_e75_2dp_stroke">
        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/logo"
                android:layout_marginLeft="8dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="享币支付"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/color333"/>
    </LinearLayout>
    <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colore1"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:background="@color/colorfff">
        <TextView
                android:id="@+id/all_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0币"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colore75"/>
        <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        <TextView
                android:id="@+id/buy_text"
                android:layout_width="150dp"
                android:layout_height="42dp"
                android:text="立即购买"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="@color/colore75"
                android:background="@drawable/bg_fce_6dp_solid"/>
    </LinearLayout>
</LinearLayout>